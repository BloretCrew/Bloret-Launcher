name: 打包为安装程序

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: 检出仓库
      uses: actions/checkout@v2

    - name: 设置 Python
      uses: actions/setup-python@v2
      with:
        python-version: '3.x'

    - name: 安装依赖
      run: |
        python -m pip install --upgrade pip
        pip install pyinstaller

    - name: 打包应用程序
      run: |
        pyinstaller --onefile main.py

    - name: 上传安装程序
      uses: actions/upload-artifact@v3
      with:
        name: installer
        path: dist/
